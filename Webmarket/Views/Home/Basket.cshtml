
@{
    ViewBag.Title = "Basket";
    var a = 0;
}
<style>
    tr, td {
        border: 3px solid gray;
        text-align: center;
        padding: 5px;
    }
</style>
 
<h2>Basket</h2>
@model IEnumerable<Webmarket.Models.Product>
<table>
    @foreach (Webmarket.Models.Product c in Model)
    {
        a += c.Price*c.Number;
        <tr>
            <td>@c.Name</td>
            <td>@c.Price руб</td>
            <td>@c.Number шт</td>
        </tr>
    }
</table>
<div>Сумма:@a</div>
<a href="/Home/Purchase">Купить</a>
<a href="/Home/Index">На главную</a>


